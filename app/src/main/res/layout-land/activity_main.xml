<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#707070"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sin"
        style="@style/CalculatorButtonGrey"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:background="#5A5A5A"
        android:onClick="calcClick"
        android:text="@string/sin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <Button
        android:id="@+id/cos"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:background="#5A5A5A"
        android:onClick="calcClick"
        android:text="@string/cos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tan"
        app:layout_constraintStart_toEndOf="@+id/sin" />

    <Button
        android:id="@+id/tan"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:background="#5A5A5A"
        android:onClick="calcClick"
        android:text="@string/tan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/user_input_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|end"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/_0"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/division_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/ac_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:background="#5A5A5A"
        android:onClick="calcClick"
        android:text="@string/ac"
        app:layout_constraintBottom_toTopOf="@+id/space3"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toEndOf="@+id/division_button" />

    <Button
        android:id="@+id/neg_pos_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:background="#5A5A5A"
        android:onClick="calcClick"
        android:text="@string/negate"
        app:layout_constraintBottom_toTopOf="@+id/sin"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <Button
        android:id="@+id/modulus_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:background="#5A5A5A"
        android:onClick="calcClick"
        android:text="@string/percent"
        app:layout_constraintBottom_toTopOf="@+id/cos"
        app:layout_constraintEnd_toStartOf="@+id/secondPower"
        app:layout_constraintStart_toEndOf="@+id/neg_pos_button" />

    <Button
        android:id="@+id/secondPower"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:background="#5A5A5A"
        android:onClick="calcClick"
        android:text="@string/x_u00b2"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/tan"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/division_button"
        style="@style/CalculatorButtonOrange"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="@string/division"
        app:layout_constraintBottom_toTopOf="@+id/multiply_button"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <Button
        android:id="@+id/seven_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="@string/seven"
        app:layout_constraintBottom_toTopOf="@+id/four_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/eight_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/five_button"
        app:layout_constraintStart_toEndOf="@+id/seven_button" />

    <Button
        android:id="@+id/nine_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/six_button"
        app:layout_constraintStart_toEndOf="@+id/eight_button" />

    <Button
        android:id="@+id/multiply_button"
        style="@style/CalculatorButtonOrange"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="X"
        app:layout_constraintBottom_toTopOf="@+id/subtract_button"
        app:layout_constraintStart_toEndOf="@+id/six_button" />

    <Button
        android:id="@+id/four_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/one_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/five_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="@string/five_number"
        app:layout_constraintBottom_toTopOf="@+id/two_button"
        app:layout_constraintStart_toEndOf="@+id/four_button" />

    <Button
        android:id="@+id/six_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/three_button"
        app:layout_constraintStart_toEndOf="@+id/five_button" />

    <Button
        android:id="@+id/subtract_button"
        style="@style/CalculatorButtonOrange"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/add_button"
        app:layout_constraintStart_toEndOf="@+id/six_button" />

    <Button
        android:id="@+id/one_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/zero_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/two_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/period_button"
        app:layout_constraintStart_toEndOf="@+id/one_button" />

    <Button
        android:id="@+id/three_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/space"
        app:layout_constraintStart_toEndOf="@+id/two_button" />

    <Button
        android:id="@+id/add_button"
        style="@style/CalculatorButtonOrange"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <Button
        android:id="@+id/zero_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/period_button"
        style="@style/CalculatorButtonGrey"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zero_button" />

    <Button
        android:id="@+id/equals_button"
        style="@style/CalculatorButtonOrange"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:onClick="calcClick"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_button" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="267dp" />

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/period_button" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="445dp" />

    <Space
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toTopOf="@+id/equals_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toEndOf="@+id/subtract_button" />

    <Space
        android:id="@+id/space3"
        android:layout_width="0dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toTopOf="@+id/space2"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toEndOf="@+id/multiply_button" />


</androidx.constraintlayout.widget.ConstraintLayout>